menu "Ayla configuration"

config AYLA_WIFI_SUPPORT
	bool "Ayla Wi-Fi support"
	default y

config AYLA_WIFI_SETUP_CLEARTEXT_SUPPORT
	bool "Ayla Wi-Fi setup in cleartext mode support"
	depends on AYLA_WIFI_SUPPORT
	default y

config AYLA_BLUETOOTH_SUPPORT
	bool "Ayla Bluetooth support"
	default y

config AYLA_LOCAL_CONTROL_SUPPORT
	bool "Ayla Local Control support"
	default y

config AYLA_SYSTEM_PARTITION_ADDR
    hex "Ayla System Partition Address"
    default 0x80014000

config AYLA_SYSTEM_PARTITION_SIZE
    int "Ayla System Partition Size"
    default 4096

endmenu
