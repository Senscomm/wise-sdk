#
# The configuration for ESP32.
#

#
# Backward compatible with versions prior to v1.13.
#
# If a new product is started, it is recommended to use the v3 partition
# table and partition table offset 0xe000.
#
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="ayla_flash_partitions.csv"
CONFIG_PARTITION_TABLE_OFFSET=0x8000

#
# Disable Ethernet interface.
#
CONFIG_ETH_USE_ESP32_EMAC=n

#
# The optimized the stack size.
#
CONFIG_ESP_IPC_TASK_STACK_SIZE=1024
CONFIG_ESP_MAIN_TASK_STACK_SIZE=3700
CONFIG_ESP_SYSTEM_EVENT_TASK_STACK_SIZE=3000
CONFIG_ESP_TIMER_TASK_STACK_SIZE=2048
CONFIG_FREERTOS_TIMER_TASK_STACK_DEPTH=4096
CONFIG_LWIP_TCPIP_TASK_STACK_SIZE=4000
CONFIG_MDNS_TASK_STACK_SIZE=2400

#
# Keeps compatible with the old version sdkconfig.defaults.esp32
#
CONFIG_BTDM_CTRL_FULL_SCAN_SUPPORTED=n
CONFIG_BTDM_SCAN_DUPL_CACHE_SIZE=25
CONFIG_ESP_IPC_USES_CALLERS_PRIORITY=n
CONFIG_FREERTOS_IDLE_TASK_STACKSIZE=1024
CONFIG_MBEDTLS_HARDWARE_MPI=n
CONFIG_MBEDTLS_HARDWARE_SHA=n
