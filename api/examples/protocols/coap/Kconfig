menu "CoAP Demo"

config COAP_TCP_SUPPORT
	bool "Support TCP transport"
	default n

config COAP_WEBSOCKETS
	bool "Use WebSockets"
	default n
	depends on COAP_TCP_SUPPORT

config COAP_S_MBEDTLS_PKI
	bool "MbedTLS PKI"
    default y
	select COAP_WITH_MBEDTLS
	select MBEDTLS_KEY_EXCHANGE_ECDH_ECDSA
	select MBEDTLS_KEY_EXCHANGE_ECDHE_ECDSA

config COAP_S_MBEDTLS_PSK
	bool "MbedTLS PSK"
    default y
	select COAP_WITH_MBEDTLS
	select MBEDTLS_KEY_EXCHANGE_PSK

config COAP_WITH_MBEDTLS
	bool
	default n
	select MBEDTLS_ECDH_C
	select MBEDTLS_ECDSA_C
	select MBEDTLS_SSL_PROTO_DTLS if !COAP_TCP_SUPPORT
	select MBEDTLS_DEBUG

endmenu
